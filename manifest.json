{
  "manifest_version": 2,
  "name": "Monitoramento de Conex√µes e Armazenamento",
  "version": "1.0",
  "permissions": [
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": ["background_scripts/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-scripts/content-script.js"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon.png"
    }
  }
}
