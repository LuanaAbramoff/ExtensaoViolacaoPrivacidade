{
  "manifest_version": 2,
  "name": "Third-Party Connection Checker",
  "version": "1.0",
  "description": "Identifica conexões de terceiros durante a navegação.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon.png"
    }
  },
  "icons": {
    "48": "icons/icon.png"
  }
}
